---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

import IconTelary from '../media/telary-logo.svg';
import IconHanglage from '../media/hanglage-logo.png';
import IconEverchron from '../media/everchron-logo.svg';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 5);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section>
        <h1>{SITE_TITLE}</h1>
        <p class="intro">
          Design engineer with a passion for interior design, and homelabbing.<br>
          This is my personal space on the web, where I share a little bit of everything.
        </p>
      </section>
      <hr>
      <section>
        <h2>Work & Projects</h2>
        <div class="tiles">
          <a href="https://telary.studio" title="Visit Telary" target="_blank" class="tile project">
            <span class="title">
              <Image src={IconTelary} alt="Telary Logo" />
              Telary Studio
            </span>
            <span class="description">Design Studio</span>
            <span class="range">2024 - Now</span>
          </a>
          <a href="https://hanglage-no8.de" title="Visit Hanglage No. 8" target="_blank" class="tile project">
            <span class="title">
              <Image src={IconHanglage} width={24}
              densities={[1, 2, 3]} alt="Hanglage No. 8 Logo" />
              Hanglage No. 8
            </span>
            <span class="description">Building my dream home</span>
            <span class="range">Since 2024</span>
          </a>
          <a href="https://everchron.com" title="Visit Everchron" target="_blank" class="tile project">
            <span class="title">
              <Image src={IconEverchron} alt="Everchron Logo" />
              Everchron
            </span>
            <span class="description">Lead Designer</span>
            <span class="range">2014 - Now</span>
          </a>
        </div>
      </section>
      <hr>
      <section>
        <h2>Writing</h2>
        <ul class="posts">
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  <h3 class="title">{post.data.title}</h3>
                  <time datetime={new Date(post.data.pubDate).toISOString()}>
                    {new Date(post.data.pubDate).getFullYear()}
                  </time>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style lang="scss">
  main{
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem 0;
  }

  h1{
    background: url(../media/ivomynttinen-lettering.png) no-repeat;
    background-size: contain;
    width: 242px;
    height: 20px;
    text-indent: -999rem;
  }

  h2{
    color: var(--gray-11);
    font-size: .875rem;
    font-weight: 500;
    font-stretch: 135%;
    margin-bottom: 1.5rem;
  }

  .intro{
    color: var(--gray-11);
    font-size: 1rem;
    line-height: 1.5rem;
    margin-top: 1rem;
    letter-spacing: .25px;
  }

  .tiles{
    display: flex;
    gap: .5rem;
  }

  .tile{
    border-radius: 6px;
    background: var(--gray-2);
    border: 1px solid transparent;
    transition: all .6s cubic-bezier(.075,.82,.165,1);
    text-decoration: none;

    &:hover{
      z-index: 1;
      background-image: linear-gradient(100deg, var(--base), transparent);
      border: 1px solid var(--gray-4);
      box-shadow: 2px 2px 1px 1px var(--gray-3), 2px 3px 1px 1px var(--gray-4), 9px 14px 18px rgba(0, 0, 0, 0.06);
      transform: skewX(-3.142deg) rotate(-1.142deg) translateY(-10px);
    }

    &:active{
      background: var(--gray-3);
      border: 1px solid var(--gray-5);
      transition: background 0.1s ease;
    }
  }

  .project{
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    height: 180px;
    font-size: 1rem;

    img{
      border-radius: 100%;
      box-shadow: var(--elevation-1);
      background-color: var(--base);
    }

    .title{
      display: flex;
      align-items: center;
      gap: 1rem;
      font-weight: 500;
      color: var(--gray-12);
    }

    .description{
      margin-top: auto;
      color: var(--gray-11);
      line-height: 1.5rem;
    }

    .range{
      font-size: .75rem;
      color: var(--gray-11);
      line-height: 1.25rem;
    }
  }

  .posts{
    list-style: none;
    padding: 0;
    margin: 0;

    li{
      transition: .2s ease;
    }

    li:not(:first-child){
      box-shadow: 0 1px 0 var(--gray-3) inset;

      &:hover{
        box-shadow: none;
      }
    }

    li:hover + li{
      box-shadow: none;
    }

    a{
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      gap: 1rem;
      padding: .75rem;
      text-decoration: none;
      border-radius: 6px;
      transition: .2s ease;

      &:hover{
        background: var(--gray-3);
      }
    }

    h3{
      color: var(--gray-12);
      font-size: 1rem;
      font-weight: 500;
    }

    time{
      color: var(--gray-11);
      font-size: 1rem;
    }
  }

  html.dark{
    h1{
      filter: invert(1);
    }

    .project img{
      background-color: var(--gray-12);
    }
  }

  @media (min-width: 540px) {
    main{
      padding: 4rem 0 2rem 0;
      gap: 3rem;
    }
  }

  @media (min-width: 768px) {
    main{
      padding: 20vh 0 2rem 0;
      gap: 4rem;
    }
  }
</style>
